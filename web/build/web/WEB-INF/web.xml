<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>verifyLogIn</servlet-name>
        <servlet-class>com.labppl.servlets.verifyLogIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.labppl.servlets.register</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>record</servlet-name>
        <servlet-class>com.labppl.servlets.record</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fetchRecords</servlet-name>
        <servlet-class>com.labppl.servlets.fetchRecords</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>fetchCars</servlet-name>
        <servlet-class>com.labppl.servlets.fetchCars</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.labppl.servlets.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>verifyLogIn</servlet-name>
        <url-pattern>/verifyLogIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>record</servlet-name>
        <url-pattern>/record</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>fetchRecords</servlet-name>
        <url-pattern>/fetchRecords</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>fetchCars</servlet-name>
        <url-pattern>/fetchCars</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
